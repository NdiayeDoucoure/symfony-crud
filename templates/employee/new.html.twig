{% extends 'base.html.twig' %}

{% block title %}
    Taysir Company - {{ employee is defined ? 'Modifier un employé' : 'Créer un employé' }}
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">
            {{ employee is defined ? 'Modifier un employé' : 'Créer un employé' }}
        </h1>
        <div class="card shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        {% for field in form %}
                        {% if field.vars.name != '_token' %}
                            <div class="col-md-6 mb-3">
                                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(field) }}
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-success">
                            {{ employee is defined ? 'Mettre à jour' : 'Créer' }}
                        </button>
                        <a href="{{ path('app_employee') }}" class="btn btn-secondary">Retour à la liste</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
